{% extends 'users.html.twig' %} {% block title %} Bienvenue
{{ app.user.firstname }}
{% endblock %}
{% block body %}
<div class="grix xs4 container">
  <div class="grix xs4 container">
    {% for message in app.flashes('error') %}
    <div class="col-xs4">
      <div class="p-3 rounded-2 error">{{ message }}</div>
      {% endfor %}
      <div class="col-xs-4">
        <h1 class="center">Modification du mot de passe</h1>
        <form method="post">
          <div class="form-field">
            <label for="pass">Mot de passe</label>
            <input type="password" id="pass" name="pass" class="form-control" />
          </div>
          <div class="form-field">
            <label for="pass2">Confirmez le mot de passe</label>
            <input type="password" id="pass2" name="pass2" class="form-control" />
          </div>
          <button class="btn shadow-1 rounded-1 blue">Valider</button>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}